  {
    "name": "Apollo",
    "version": "0.1.0",
    "description": "Apollo is a fact checking tool that helps you stay vigilant on Twitter by showing you relevant insights on news articles other users post or share.",
    "permissions": [
      "activeTab",
      "https://apollo3.nn.r.appspot.com/"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://twitter.com/*"
        ],
        "run_at": "document_end",
        "js": [
          "tooltip.js",
          "sidebar.js",
          "server_connector.js",
          "annotator.js",
          "apollo.js"
        ],
        "css": [
          "apollo.css",
          "loading_icons.css",
          "external/microtip.css"
        ]
      }
    ],
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": false
    },
    "web_accessible_resources": [
      "fonts/inter_variable.ttf",
      "fonts/playfair_display_variable.ttf",
      "img/Profile.svg",
      "img/alert-triangle.svg",
      "img/tooltip-icon.svg",
      "img/fallback_thumbnail.jpg",
      "img/xbutton.png"
    ],
    "icons": {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "manifest_version": 2
  }
