  {
    "name": "Hoth",
    "version": "0.1",
    "description": "Prototype twitter article checker",
    "permissions": ["activeTab", "storage", "https://hoth-server.herokuapp.com/"],
    "content_scripts": [
      {
        "matches": ["https://twitter.com/*"],
        "run_at": "document_end",
        "js": [
          "server_connector.js",
          "indicators.js",
          "annotator.js",
          "hoth.js"
        ],
        "css": ["hoth.css"]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "manifest_version": 2
  }
