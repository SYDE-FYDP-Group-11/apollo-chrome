  {
    "name": "Apollo",
    "version": "1.0.0",
    "description": "Browser extension to help users avoid information disorder on Twitter",
    "permissions": ["activeTab", "https://apollo3.nn.r.appspot.com/"],
    "content_scripts": [
      {
        "matches": ["https://twitter.com/*"],
        "run_at": "document_end",
        "js": [
          "sidebar.js",
          "server_connector.js",
          "annotator.js",
          "apollo.js"
        ],
        "css": ["apollo.css"]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "manifest_version": 2
  }
